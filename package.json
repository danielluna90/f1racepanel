{
  "name": "f1racepanel",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:client": "rm -rf dist && cd packages/client && bun run build && mv dist ../../dist",
    "build": "npm-run-all2 build:*",
    "dev": "bun --filter '{f1racepanel-server,f1racepanel-client-new}' dev",
    "prepare": "husky",
    "checkRepo": "bun utils/repoCheck.ts",
    "postinstall": "bun run checkRepo",
    "predev": "bun run checkRepo"
  },
  "dependencies": {
    "npm-run-all2": "^6.2.0"
  },
  "devDependencies": {
    "docker-compose": "^0.24.8",
    "husky": "^9.0.11",
    "zod": "^3.23.8"
  }
}
