{
  "name": "f1racepanel",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:client": "rm -rf dist && cd packages/client && bun run build && mv dist ../../dist",
    "build": "npm-run-all2 build:*",
    "dev:server": "cd packages/api && bun run dev",
    "dev:client": "cd packages/client && bun run dev",
    "dev:client-new": "cd packages/client-new && bun run dev",
    "dev": "run-p dev:{server,client-new}",
    "prepare": "husky"
  },
  "dependencies": {
    "npm-run-all2": "^6.2.0"
  },
  "devDependencies": {
    "husky": "^9.0.11"
  }
}
