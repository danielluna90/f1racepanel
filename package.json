    "predev": "bun run utils/setup-dev.ts",
    "dev": "bun --filter '{f1racepanel-server,f1racepanel-client-new}' dev"
  },
  "devDependencies": {
    "npm-run-all2": "^6.2.2",
    "zod": "^3.23.8"
  }
}
