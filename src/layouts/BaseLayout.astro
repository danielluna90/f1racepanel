---
import { ViewTransitions } from "astro:transitions";

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title ? `F1 Race Panel - ${title}` : "F1 Race Panel"}</title>
    <meta name="description" content="View Information for F1 Races" />

    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8404752187792760"
      crossorigin="anonymous"></script>

    <ViewTransitions />
  </head>
  <body>
    <Navbar />
    <main transition:animate="slide">
      <slot />
    </main>
    <Footer />
    <style is:global>
      h1 {
        text-align: center;
      }

      :root {
        --bg-color: #050505;
        --text-color: #fafafa;

        --primary-color: #2c333a;
        --primary-color-rgb: 44 51 58;
        --secondary-color: #0c3131;

        --accent-color: #bebaa7;

        --vertical-margin: 2rem;
        --side-margin: 3rem;
      }

      html {
        font-family: system-ui, sans-serif;
        background-color: var(--bg-color);
        color: var(--text-color);
      }

      body {
        display: grid;

        grid-template-areas:
          "a a a"
          "b nav c"
          "d d d"
          "e main f"
          "g g g"
          "h footer i"
          "j j j";
        grid-template-columns: var(--side-margin) 1fr var(--side-margin);
        grid-template-rows:
          var(--vertical-margin) auto 0 1fr var(--vertical-margin)
          auto var(--vertical-margin);

        overscroll-behavior-x: none;
        overscroll-behavior-y: none;
        min-height: 100vh;

        margin: 0;
      }

      nav {
        grid-area: nav;
      }

      main {
        grid-area: main;
      }

      footer {
        grid-area: footer;
      }

      a {
        color: #ffffff;
        text-decoration: none;
      }

      a:visited {
        color: #ffffff;
      }

      a:hover,
      button:hover {
        cursor: pointer;
      }

      @media screen and (max-width: 1024px) {
        :root {
          --side-margin: 2rem;
        }
      }

      @media screen and (max-width: 640px) {
        :root {
          --vertical-margin: 1rem;
          --side-margin: 1rem;
        }
      }
    </style>
  </body>
</html>
