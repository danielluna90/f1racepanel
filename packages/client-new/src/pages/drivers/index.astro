---
import type { ResponseTypes } from "f1racepanel-common";
import PageLayout from "../../layouts/PageLayout.astro";
import { getAllDrivers } from "../../services/drivers";
import Card from "../../components/Card.astro";

const drivers = await getAllDrivers();
---

<PageLayout title="Drivers" titleText="Drivers">
  {
    drivers.map((driver: ResponseTypes.Driver) => {
      return (
        <Card title={driver.name}>
          <h3>Nationality: US</h3>
          <p>Debut Season: 2004</p>
          <p>Wins: 0</p>
          <p>Championships: 0</p>
          <a href="/" class="btn btn-primary">
            Visit
          </a>
        </Card>
      );
    })
  }
</PageLayout>
