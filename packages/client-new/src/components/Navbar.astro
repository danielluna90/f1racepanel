<div class="navbar bg-base-100">
  <div class="flex-none lg:hidden">
    <label
      for="my-drawer-3"
      aria-label="open sidebar"
      class="btn btn-square btn-ghost"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="inline-block h-6 w-6 stroke-current"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </label>
  </div>
  <div class="flex-1">
    <a class="btn btn-ghost text-2xl" href="/">F1 Race Panel</a>
  </div>
  <div class="hidden flex-none lg:block">
    <ul class="menu menu-horizontal">
      <SidebarContent />
    </ul>
  </div>
</div>

<script>
  const themeToggles: HTMLInputElement[] = [
    ...document.getElementsByClassName("theme-selector-toggle"),
  ] as HTMLInputElement[];

  themeToggles.forEach((el) => {
    el.checked =
      (localStorage.getItem("theme") ?? "light") == "light" ? false : true;

    el.addEventListener("change", function () {
      themeToggles.forEach((toggles) => {
        toggles.checked = this.checked;
      });
    });
  });
</script>
