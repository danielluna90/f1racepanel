---
interface Props {
  admin: boolean;
}

const { admin } = Astro.props;
---

<nav class="navbar bg-base-100">
  <div class="flex-none">
    <button class="btn btn-square btn-ghost" id="nav-open-btn">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="inline-block h-5 w-5 stroke-current"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
  <div class="flex-1">
    <a class="btn btn-ghost text-xl" href="/">F1 Race Panel</a>
  </div>
  <ul class="menu menu-horizontal px-1">
    <li><a>Link</a></li>
    <li>
      <label class="flex cursor-pointer gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="5"></circle>
          <path
            d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"
          ></path>
        </svg>
        <input
          type="checkbox"
          value="cupcake"
          class="toggle theme-controller"
          data-toggle-theme="dark,light"
          data-act-class="ACTIVECLASS"
        />
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </label>
    </li>
  </ul>
</nav>

<script>
  const bodyEl: HTMLBodyElement = document.getElementsByTagName(
    "body"
  )[0] as HTMLBodyElement;

  document.getElementsByTagName("nav");

  document.getElementById("nav-open-btn")?.addEventListener("click", () => {
    bodyEl.classList.toggle("nav-open");

    [...document.getElementsByTagName("button")].forEach((element) => {
      //element.tabIndex = -1;
      element.disabled = true;
    });

    //(document.getElementById("nav-close-btn") as HTMLButtonElement).tabIndex = 0;
    (document.getElementById("nav-close-btn") as HTMLButtonElement).disabled =
      false;
  });
</script>
