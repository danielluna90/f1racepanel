---
import type { DatabaseTypes } from "f1racepanel-common";
import Card from "../../Card.astro";

interface Props {
  data: DatabaseTypes.Driver;
}

const { data } = Astro.props;
---

<Card>
  <h3>{data.name}</h3>
  <h4>{data.dob} &#183 {data.nationality.toLocaleUpperCase()}</h4>

  <p>First Grand Prix:</p>
  <p>Last Grand Prix:</p>

  <p>Best Result:</p>
  <p>Best Grid Position:</p>
</Card>
