---
interface Props {
  abbrev: string;
  result: number;
  car_num: number;
}

const { abbrev, result, car_num } = Astro.props;
---

<div class="overflow-x-auto bg-primary">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <th class="text text-base-content">Race Abrreviation</th>
        <th class="text text-base-content">Result</th>
      </tr>
    </thead>
    <tbody>
      <!-- row 1 -->
      <tr class="hover">
        <td class="text text-base-content">{abbrev}</td>
        <td class="text text-base-content">
          {result}
          <br />
          <span class="badge badge-secondary badge-sm text-base-content"
            >Car #{car_num}</span
          >
        </td>
      </tr>
    </tbody>
  </table>
</div>
